<% form_for [@project, @stage] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :limit %> (leave blank for no limit)<br/>
    <%= f.text_field :limit, :size => 5 %>
  </p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
